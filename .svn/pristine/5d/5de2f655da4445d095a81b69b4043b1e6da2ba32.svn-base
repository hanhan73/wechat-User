  //点击btn 发送验证码
  sendcode(){
    this.loadingCtrl.create();
    if ((this._Phonenum == null) || (this._Phonenum == undefined))
    {
      this.ShowToast('手机号不能为空！');
      return;
    }
    this.ShowToast(this._Phonenum);
        let jk=6;
        this.btnname=true;
        let iTime = setInterval(() => {
          if(jk<=0){
            jk = 60;
            clearInterval(iTime);
          }else {
            jk--;
            this.sendbtn= '已发送 '+jk;
          }
          if(0 == jk){
            this.sendbtn= '重新发送';
            this.btnname=false;
          }
        },1000);
        //请求验证码接口
// get_code/13018044815
    this.auth.SendCode(
