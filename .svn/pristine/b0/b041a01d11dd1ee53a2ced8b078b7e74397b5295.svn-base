page-topup {
    .card-header {
        border-bottom: 1px solid #93CBED;        
        height: 20%;

        .card-number {            
            position: relative;
            background: url("../../assets/icon/Order/card.png") no-repeat;
            background-size: 100% 100%;
            color: #0299fe;
            margin-left: 4%;
            margin-top: 4%;
            margin-bottom: 4%;
            padding: 3%;
        }        

        .card-img {
            position: absolute;
            width: 3rem;
            left: 8%;
            top: 68%;
        }

        .card-iccid {
            border:  1px solid #0299fe;
            border-radius: 10px;
            height: 100%;
            margin-left: 35%;
            padding: 0 12%;            
            display: flex;
            justify-content: center;
            align-items: center;  
            .iccid-text {
                width: 90%;
                font-size: 1.5rem;                
            }
        }

        .flow-col {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .flow-content {
            text-align: center;
            .name-label {
                color: #0299fe;
                font-size: 1.6rem;
                // letter-spacing: 1px;
                span {
                    color: #f4910e;
                    font-size: 2.2rem;
                    font-weight: 600;
                }                            
            }

            .sale-price {
                text-decoration: line-through;
                color: #949494;
            }
        }

        
    }


}
