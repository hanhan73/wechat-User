page-srecharge {

  .item-block {
    min-height: 0rem
  }

  .button {
    margin: 0.8rem 2rem;
  }

  .footer-content {    
    height: 30%;
    .lab2 {
      color: #429ec2;
      text-align: center;
      font-size: 1.3rem;
    }

    .footer-button {
      height: 90%;
      width: 8rem;
    }
    
  } 

  .srsearch {
    background-color: white;
    color: #34A3E7;
    width: 5rem;
    margin-left: 25.5rem;
    margin-top: -4.7rem;
    height: 2.9rem
  }

  .btn border color {
    border-image: -webkit-linear-gradient( #1bbbbc, #0f6ca5) 30 30;
    border-image: -moz-linear-gradient( #1bbbbc, #0f6ca5) 30 30;
    border-image: linear-gradient( #1bbbbc, #0f6ca5) 30 30;
  }
  .content-bg {
    background: url(../../assets/query/bg.png) center top no-repeat;
    background-size: 100%;
  }

  .input-round {
    padding: 0 10px;
    border: solid 1px;
    border-radius: 0.4rem;
    background: transparent;
    color: #58d3fa;
  }    

  .content-input {
    margin-top: 18%;
    padding: 1.5rem;
    .input-button {
      @extend .input-round;
      text-align: center;
    }    
  }

  .input-histroy {
    @extend .input-round;
    padding:0;
    margin-top: -3%;
  }

  .basic-item-histroy {
    align-items: center;
    justify-content: center;
    height: 3rem;
  }

  .item-histroy {
    @extend .basic-item-histroy;
    border-bottom: solid 1px;
  }

  .flow-label {
    text-align: center;
    color: #58d3fa;
    margin-top: -75%;
    margin-left: 15%;
    font-size: 1rem;
  }

  .flow-size {
    text-align: center;
    color: greenyellow;
    margin-top: 5%;
    margin-left: 15%;
  }


  .inner-box {
    width:100%;
    height:0;
    padding-top:50%;
    padding-bottom:50%;
    display:flex;
    flex-wrap: wrap;
    align-items: center;
    ul {
      margin:0;
      padding:0;
      text-align:center;
      flex:0 0 100%;
    }
    li {
      list-style: none;
      margin: 0;
      padding: 0;
      &:first-child() {
        font-size:1.2rem;
        color: #58d3fa;
      }
      &:last-child() {
        font-size:1.4rem;
        color: greenyellow;
      }
    }
  }

  .loading-items {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: url(../../assets/query/Graphical@2x.png) center no-repeat;
    background-size: contain;
  }

  .rotate-items {
    animation: rotate 3s infinite linear;
    -webkit-animation: rotate 3s infinite;
    animation-fill-mode: forwards;
    animation-iteration-count: 1;
  }

  .opacity-img {
    animation: img-opacity 3s infinite linear;
    -webkit-animation: img-opacity 3s infinite;
  }

  .opacity-text {
    animation: text-opacity 3s infinite linear;
    -webkit-animation: text-opacity 3s infinite;
  }

  .outer-rings {
    width:90%;
    position: absolute;
    .texts {
      position: absolute;
      color: white;
      font-size: 1rem;
    }
    &.left-top{
      right: -5%;
      top: 15%;
      .texts {
        top: 15%;
        right: 10%;
        padding: 0 8px;
      }
    }
    &.left-bottom{
      right: -5%;
      bottom: 20%;
      .texts {
        bottom: 40%;
        right: 15%;
      }
    }
    &.right-top {
      left: -5%;
      top: 15%;
      .texts {
        top: 30%;
        left: 30%;
      }
    }
    &.right-bottom{
      left: -5%;
      bottom: 15%;
      .texts {
        bottom: 12%;
        left: 20%;
      }
    }
  }

}


@keyframes rotate {
  0% {
    opacity: 0;
    transform: rotate(0deg) scale(.5);
    -webkit-transform: rotate(0deg) scale(.5);
    -moz-transform: rotate(0deg) scale(.5);
    -o-transform: rotate(0deg) scale(.5);
    -ms-transform: rotate(0deg) scale(.5);
  }
  100% {
    opacity: 1;
    transform: rotate(360deg) scale(1);
    -webkit-transform: rotate(360deg) scale(1);
    -moz-transform: rotate(360deg) scale(1);
    -o-transform: rotate(360deg) scale(1);
    -ms-transform: rotate(360deg) scale(1);
  }
}


@keyframes img-opacity {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 0.5;
  }
  100% {
    opacity: 1;
  }
}

@keyframes text-opacity {
  0% {
    opacity: 0;
    height: 0%;
    transition: height 3s;
  }
  100% {
    opacity: 1;
    height: 100%;
    transition: height 3s;
  }
}
