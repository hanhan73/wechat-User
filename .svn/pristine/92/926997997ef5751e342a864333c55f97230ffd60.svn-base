  GetRequestParam(url)
  {
    localStorage.removeItem('openid');
    if (url)
    {
        let idx = url.indexOf("?");
        if (idx != -1)
        {
            let uri = url.slice(idx + 1);
            uri = uri.split("&");
            // console.log(uri)
            for (let param of uri)
            {
              let p = param.split('=');
              if (p.length > 1)
              {
                let param_name = p[0];
                let param_value = p[1];
                console.log(param_name+'====='+param_value);
                localStorage.setItem(param_name, param_value);
              }
            }
        }
    }
  }

