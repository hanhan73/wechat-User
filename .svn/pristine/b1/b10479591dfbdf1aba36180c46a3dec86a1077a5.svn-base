page-home {
  * {
    margin: 0px;
    padding: 0px;
    box-sizing:content-box;
    font-family: $font-family;
    //"Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif
  }

  button {
    width: 11%;
    left: 68%;
    top: 40%;
  }
  .button{
    height: 2.5rem;
  }
  .item-md .item-button{
    font-size: 14px;
  }
  .sb {
    position: absolute;
    background-color: #ffac14;
    //border-color: #ffaa0d;
    color: white;
  }
  .he {
    width: 100%;
    margin: 0px;
    height: 70px;
    background-color: white;
    position: relative;
  }
  .top {
    position: absolute;
    left: 12.5rem;
    width: 7.5rem;
    top: 0.5rem;
    border: 2px #c8c7cc solid;
    border-radius: 100%;
  }

  .info {
    position: absolute;
    margin-left: 3rem;
    color: white;
    top: 80%;
  }
  .h2 {
    line-height: 24px;
    font-size: 17px;
    padding-left: 3rem;
  }
  //滑动div样式
  ion-slide {
    position: relative;
    width: 100%;
    //border-top: 2px #e6e6e6 solid;
  }
  .cordNum {
    position: absolute;
    width: 11%;
    padding: 2.8%;
    height: 60%;
    color: #6DC8FF;
    font-size: 1.3rem;
    margin-left: 5%;
    top: 13%;
    background: url("../../assets/icon/green.png") no-repeat;
    background-size: 100% 100%;
  }
  .cimg{
    position: absolute;
    margin-top: 23%;
    left:10%;
  }
  .cimg_two{
    padding-left: 40%;
  }
  ion-slide ion-label {
    position: absolute;
    left: 25%;
    font-size: 1.4rem;
    top: 10%;
    color: #5FC88C;
  }
  .label {
    margin: 0px;
  }
  ion-icon {
    position: absolute;
    //font-size: 37px;
    color: #858585;
    z-index: 1;
  }
  .input {
    width: 275px;
    margin: auto;
  }
  .flow {
    width: 50%;

  }
  ion-grid {
    color: #4d4d4d;
  }
  ion-col {
    color: white;
    height: 100px;
    border: none;
    //border-right: 2px solid #e9e9e9;
    //border-bottom: 2px solid #e9e9e9;
  }
  ion-col img {
    width: 56%;
    height: 61%;
    margin-left: 25%;
    margin-top: 10%;
  }
  .rb{
    background-color: #15A6FF;
    position: absolute;
    width: 0.3rem;
    height: 2rem;
    top: 0.6rem;
    left: 24.5rem;
    font-size: 1.6rem;
  }
  .ob{
    background-color: #15A6FF;
    position: absolute;
    width: 0.3rem;
    height: 2rem;
    top: 0.6rem;
    left: 18.8rem;
    font-size: 1.6rem;
  }
  .gridlable {
    //font-family: 'HiraginoSansGB W3';
    color: #5D5958;
    font-size: 14px;
    margin-left: 18%;
  }
  .shop {
    //font-family: 'HiraginoSansGB W3';
    color: #5D5958;
    font-size: 14px;
    margin-left: 38%;
  }

  /*
  进度条
   */
  .title {
    color:#b2b2b2;
    font-size: 1.2rem;
    float: left;
    margin-left: 23%;
    margin-top: 2.5%;
  }
  .container {
    width: 32%;
    float: right;
    margin-right: 7%;
    border:1px #ABDFFE solid;
    border-radius: 8px;
    margin-top: 2.5%;
  }
  .num{
    float: right;
    margin-right: 10%;
    margin-top: -0.5%;
    height: 8px;
    font-size: 12px;
    color: #A0A59E;
  }
  .num2{
    float: left;
    margin-left: 35%;
    margin-top: -2%;
    height: 8px;
    font-size: 12px;
    color: white;
  }
  .bar-unfill {
    background: #DDFEC5;
    width: 100%;
    height: 13px;
    display: block;
    border-radius: 8px;
  }
  .bar-fill {
    background: #66CBFF;
    height: 13px;
    display: block;
    border-radius: 8px;
    //-webkit-transition: width .8s ease;
    //-moz-transition: width .8s ease;
    //transition: width .8s ease;
    //-webkit-animation: progressbar 7s infinite;
    //animation: progressbar 7s infinite

  }
}
